<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/green1"/>
            <stroke android:color="@color/green3"
                android:width="1dp"/>
            <gradient android:startColor="@color/green2"
                android:endColor="@color/balck"
                android:angle="-90"
                android:centerColor="@color/green3"/>
            <corners android:radius="5dp"/>
            <padding android:bottom="5dp"
                android:left="5dp"
                android:right="5dp"
                android:top="5dp"/>
        </shape>
    </item>

</selector>