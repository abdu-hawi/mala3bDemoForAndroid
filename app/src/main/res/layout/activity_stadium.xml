-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <!-- start header  -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:id="@+id/headerStaduim">


            <android.support.design.widget.AppBarLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#000000"
                android:weightSum="100"
                android:id="@+id/staduimTab">

                <android.support.design.widget.TabLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/staduimToolbarTop"
                    android:background="@drawable/white_gray_broder_bottom">
                </android.support.design.widget.TabLayout>

            </android.support.design.widget.AppBarLayout>


        </RelativeLayout>
        <!-- END header  -->

        <!-- start fragment
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/starduimFragmentView"
            android:layout_below="@id/headerStaduim">

        </RelativeLayout>
        -->
        <!-- start fragment  -->


        <!-- start body  -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/bodyStaduim"
            android:layout_below="@+id/headerStaduim"
            android:layout_above="@+id/bottomStaduim">

            <android.support.v4.view.ViewPager
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/staduimContainer"
                app:layout_behavior="@string/appbar_scrolling_view_behavior">

            </android.support.v4.view.ViewPager>
        </RelativeLayout>
        <!-- End body  -->

        <!-- start bottom  -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:id="@+id/bottomStaduim"
            android:layout_alignParentBottom="true">

        </RelativeLayout>
        <!-- End bottom  -->
    </RelativeLayout>





