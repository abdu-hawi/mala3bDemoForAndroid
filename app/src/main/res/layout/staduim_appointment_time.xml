<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginStart="15dp">


    <ImageView
        android:id="@+id/footballpic"
        android:layout_width="@dimen/ballDistance"
        android:layout_height="@dimen/ballDistance"
        app:srcCompat="@drawable/football_green"
        android:layout_gravity="center"/>

    <TextView
        android:id="@+id/txtTimePlay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="09:00 PM"
        android:textSize="@dimen/txtTimeSize"
        android:layout_below="@id/footballpic"
        android:layout_marginTop="@dimen/txtTimeMarTop"/>


</LinearLayout>