<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="3dp"
    android:layout_marginBottom="3dp"
    android:paddingStart="10dp"
    android:orientation="vertical"
    >

    <TextView
        android:id="@+id/tvName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="AUG"
        android:textSize="@dimen/txtCalSize"
        android:layout_gravity="center"
        android:textColor="@color/green4"/>

    <TextView
        android:id="@+id/tvNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="FRI"
        android:textSize="@dimen/txtCalSize"
        android:layout_marginTop="@dimen/txtDayMarTop"
        android:layout_gravity="center"
        android:textColor="@color/green4"/>

    <Button
        android:id="@+id/button"
        android:layout_marginTop="@dimen/btnDateMarTop"
        android:layout_width="@dimen/btnDateDistance"
        android:layout_height="@dimen/btnDateDistance"
        android:textSize="@dimen/txtCalSize"
        android:text="88"
        android:gravity="center"
        android:layout_gravity="center"
        android:background="@drawable/button_press"/>

</LinearLayout>
