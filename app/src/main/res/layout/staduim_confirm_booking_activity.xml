<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/green3"
    tools:context="com.example.hawi.mal3b.staduimChoiseAndConfirmPay.StaduimConfirmBookingActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:padding="@dimen/paddingScroll"
        android:layout_alignParentTop="true">


        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/green3"
            android:orientation="vertical">

            <TextView
                android:id="@+id/staduimName"
                android:layout_width="match_parent"
                android:layout_height="@dimen/backgroundHeaderHieght"
                android:background="@drawable/white_gray_border_top"
                android:gravity="center"
                android:text="AL-Gwhara Staduim - **"
                android:textSize="@dimen/txtSizeHeaderCon"
                android:textStyle="bold" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/rowHieghtCon"
                android:background="@drawable/white_gray_border_top"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/staduimConfirmDate"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentStart="true"
                    android:gravity="center"
                    android:text="Date: Sat 12-05-2017"
                    android:textSize="@dimen/txtSizeCon" />

                <TextView
                    android:id="@+id/staduimConfirmTime"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_toEndOf="@id/staduimConfirmDate"
                    android:gravity="center"
                    android:paddingStart="@dimen/startEndPaddingCon"
                    android:text="Time: 23:00"
                    android:textSize="@dimen/txtSizeCon" />
            </RelativeLayout>

            <TextView
                android:id="@+id/staduimConfirmSize"
                android:layout_width="match_parent"
                android:layout_height="@dimen/rowHieghtCon"
                android:background="@drawable/white_gray_border_top"
                android:gravity="center"
                android:text="Size: 12Ã—12"
                android:textSize="@dimen/txtSizeCon" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/rowHieghtCon"
                android:background="@drawable/white_gray_border_top"
                android:gravity="center"
                android:text="Deposit"
                android:textColor="#ff0000"
                android:textSize="@dimen/txtSizeCon" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/rowHieghtDeposit"
                android:background="@drawable/white_gray_border_top"
                android:gravity="center"
                android:text="You must pay the sum of ( 300RS ) tomorrow \n from 14:00 to 16:00"
                android:textSize="@dimen/txtSizeCon"
                android:textStyle="bold" />

            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="@dimen/rowHieghtCon"
                android:background="@drawable/white_gray_border_top"
                android:checkedButton="@+id/radioButton2"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:text="Pay Method: "
                    android:textSize="@dimen/txtSizeCon" />

                <RadioButton
                    android:id="@+id/radioButton2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Cash"
                    android:textSize="@dimen/txtSizeCon" />

                <RadioButton
                    android:id="@+id/radioButton3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Visa"
                    android:textSize="@dimen/txtSizeCon" />

                <RadioButton
                    android:id="@+id/radioButton4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Paypal"
                    android:textSize="@dimen/txtSizeCon" />
            </RadioGroup>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/rowHieghtCon"
                android:background="@drawable/white_gray_border_top"
                android:gravity="center">

                <Switch
                    android:id="@+id/switch1"
                    android:layout_width="@dimen/widhtSubRelativeCon"
                    android:layout_height="@dimen/rowHieghtCon"
                    android:text="@string/full_payment"
                    android:textSize="@dimen/txtSizeCon" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/rowHieghtCon"
                android:background="@drawable/white_gray_border_top"
                android:gravity="center">


                <EditText
                    android:id="@+id/editText"
                    android:layout_width="@dimen/widhtSubRelativeCon1"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/white_gray_border_top"
                    android:hint="@string/Coupon"
                    android:textSize="@dimen/txtSizeCon" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/rowHieghtCon"
                android:background="@drawable/white_gray_border_top"
                android:gravity="center">

                <TextView
                    android:id="@+id/txtTerm"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentStart="true"
                    android:gravity="center"
                    android:text="@string/You_agree_to_the"
                    android:textSize="@dimen/txtTermCon" />

                <TextView
                    android:id="@+id/txtTerm1"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_toEndOf="@+id/txtTerm"
                    android:gravity="center"
                    android:text="@string/terms_of_use"
                    android:textColor="#ff0000"
                    android:textSize="@dimen/txtTermCon"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/txtTerm2"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_toEndOf="@+id/txtTerm1"
                    android:gravity="center"
                    android:text="@string/and"
                    android:textSize="@dimen/txtTermCon" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_toEndOf="@+id/txtTerm2"
                    android:gravity="center"
                    android:text="cancellation policy"
                    android:textColor="#ff0000"
                    android:textSize="@dimen/txtTermCon"
                    android:textStyle="bold" />
            </RelativeLayout>


        </LinearLayout>

    </ScrollView>

    <Button
        android:id="@+id/btnConfirm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="@string/confirm"
        android:layout_centerHorizontal="true"
        android:textSize="@dimen/txtSizeCon"
        android:layout_alignParentBottom="true"/>

</RelativeLayout>
